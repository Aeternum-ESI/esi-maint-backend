model Report {
    id          Int           @id @default(autoincrement())
    reporterId  Int
    assetId     Int?
    categoryId  Int?
    description String
    imageUrl    String?
    type        OperationType
    status      ReportStatus

    reporter             User                  @relation(fields: [reporterId], references: [id])
    asset                Asset?                @relation(fields: [assetId], references: [id])
    category             Category?             @relation(fields: [categoryId], references: [id])
    interventionRequests InterventionRequest[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

model Schedule {
    id                  Int      @id @default(autoincrement())
    assetId             Int
    // Admin who created the schedule
    schedulerId         Int
    categoryId          Int
    description         String
    lastMaintenanceDate DateTime
    period              DateTime

    asset     Asset    @relation(fields: [assetId], references: [id])
    category  Category @relation(fields: [categoryId], references: [id])
    scheduler User     @relation(fields: [schedulerId], references: [id])

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt
}

enum OperationType {
    CORRECTIVE
    PREVENTIVE
}

enum ReportStatus {
    PENDING
    ASSIGNED
    CANCELED
    TREATED
}
